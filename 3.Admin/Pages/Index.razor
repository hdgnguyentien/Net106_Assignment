@page "/"

<PageTitle>Index</PageTitle>

@if (sanPhams == null)
{
    <div class="spinner-border"></div>
}
else
{
    <h1 class=" text-center">Sản Phẩm</h1>
    <div class="container">
        <div class="row">
            @foreach (var item in sanPhams)
            {
                <div class="col-lg-4">
                    <div class="card" style="width: 23rem; margin-bottom: 30px">
                        <img src=@("/AnhSanPham/"+item.LinkAnh) class="img-thumbnail">
                        <div class="card-body">
                            <h5 class="card-title">@item.Ten</h5>
                            <h3 class="card-text fw-bold"> @item.GiaBan$</h3>
                            <div class="d-grid gap-2 d-md-block">
                                <a class="btn btn-warning"
                                   asp-controller="Cart"
                                   asp-action="AddtoCart"
                                   asp-route-id="@item.Id">
                                    Thêm vào giỏ hàng
                                </a>
                                <a class="btn btn-danger"
                                   asp-controller="Cart"
                                   asp-action="Add"
                                   asp-route-id="@item.Id">
                                    Mua ngay
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
